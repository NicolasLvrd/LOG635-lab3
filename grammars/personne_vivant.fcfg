%start S

S[SEM=<EstVivant(?vp)>] -> VP[SEM=?vp]
VP[SEM=?n] -> N[SEM=?n] V AD
N[SEM=?np] -> Npers[SEM=?np]
V -> 'est'
AD -> 'vivant' | 'vivante'

Npers[SEM=<Rouge>] -> 'rouge'
Npers[SEM=<Bleu>] -> 'bleu'
Npers[SEM=<Vert>] -> 'vert'
Npers[SEM=<Jaune>] -> 'jaune'
Npers[SEM=<Blanc>] -> 'blanc'
Npers[SEM=<Mauve>] -> 'mauve'